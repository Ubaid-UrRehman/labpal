<template id="experiment_list" name="Experiments">
    <t t-call="website.layout">
        <div class="row">
            <div class="col-md-10">
        <div class="col-md-2">
            </div>
                <t t-foreach="objects" t-as="obj">
                    <t t-call="labpal.exp_render"/>
                </t>
            </div>
        </div>
    </t>
</template>
<template id="exp_render" name="Experiment">
    <div class="media">
        <div class="media-body">
            <!-- <p t-esc="obj.exp_date" /> -->
            <div class="btn-group">
                <a t-attf-href="/experiments/{{ slug(obj) }}/view/" class="btn btn-default btn-xs" role="button"><h4 class="media-heading" t-esc="obj.exp_title" /></a>
                <!-- <a t-attf-href="/experiments/{{ slug(obj) }}/edit/" class="btn btn-default btn-xs" role="button">Edit</a>
                <a t-attf-href="/experiments/{{ slug(obj) }}/delete/" class="btn btn-default btn-xs" role="button">Delete</a> -->
            </div>
        </div>
    </div>
</template>
<template id="exp_detail_template" name="Experiment">
    <div class="media">
        <div class="media-body">
            <div class="btn-group">
                <p t-esc="obj.exp_date" />
                <p t-esc="obj.exp_title" />
                <p t-esc="obj.description"/>
            </div>
            <div>
            <a t-attf-href="/experiments/{{ slug(obj) }}/edit/" class="btn btn-default btn-xs" role="button">Edit</a>
        </div>
        </div>
    </div>
</template>
<template id="posts_new" name="New Post">
    <t t-call="website.layout">
        <div class="row">
            <div class="col-md-6 col-md-offset-2">
                <form role="form" action="/posts/new" method="POST">
                    <t t-foreach="form" t-as="field">
                        <t t-call="labpal.field_render" />
                    </t>
                    <button type="submit" class="btn btn-primary mt8">Save</button>
                </form>
            </div>
        </div>
    </t>
</template>
<template id="exp_view" name="View Experiment">
            <t t-call="website.layout">
                <div class="row">
                    <div class="col-md-10 col-md-offset-2">
                        <t t-call="labpal.exp_detail_template"/>
                    </div>
                </div>
            </t>
        </template>
