<template id="field_render" name="Render Form Field">
    <div t-attf-class="form-group {{ field.errors and 'has-error' or '' }}">
        <t t-raw="field.label" />
        <t t-raw="field(class_='form-control')" />
        <span t-foreach="field.errors" t-as="error" class="help-block">
            <t t-esc="error" />
        </span>
    </div>
</template>
